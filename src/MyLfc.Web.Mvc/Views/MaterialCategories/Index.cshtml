@model MyLfc.Application.MaterialCategories.GetMaterialCategoryListQuery.Response

@{
    ViewBag.Title = "Категории материалов";
    Layout = "_Layout";
}

@*<a *ngIf="roles.isEditor" [routerLink]="[0, 'edit']">Создать категорию</a>*@
<ul>
    @foreach (var category in Model.Results)
    {
        if (category.ItemsCount > 0)
        {
            <li *ngIf="roles.isEditor">
                <a asp-action="Index" asp-controller="@category.MaterialType.ToString()" asp-route-categoryId="@category.Id">
                    @category.Name [@category.ItemsCount]
                </a>
                @*<span *ngIf="roles.isEditor">
                        <a [routerLink]="[category.id, 'edit']"> <span class="glyphicon glyphicon-pencil"></span></a>
                        <a *ngIf="category.itemsCount == 0" (click)="delete(i)"> <span class="glyphicon glyphicon-trash"></span></a>
                    </span>*@
            </li>
        }
    }
</ul>